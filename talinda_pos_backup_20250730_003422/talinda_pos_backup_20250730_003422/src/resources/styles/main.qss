QCheckBox::indicator:hover {
    border-color: #0097e6;
}

/* RadioButton styling */
QRadioButton {
    color: #2f3640;
    font-size: 13px;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid #dcdde1;
    border-radius: 9px;
    background-color: white;
}

QRadioButton::indicator:checked {
    background-color: #0097e6;
    border-color: #0097e6;
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iOCIgaGVpZ2h0PSI4IiB2aWV3Qm94PSIwIDAgOCA4IiBmaWxsPSJub25lIiB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciPgo8Y2lyY2xlIGN4PSI0IiBjeT0iNCIgcj0iMiIgZmlsbD0id2hpdGUiLz4KPC9zdmc+Cg==);
}

QRadioButton::indicator:hover {
    border-color: #0097e6;
}

/* TextEdit styling */
QTextEdit {
    border: 2px solid #dcdde1;
    border-radius: 8px;
    padding: 8px;
    background-color: white;
    color: #2f3640;
    font-size: 13px;
    selection-background-color: #0097e6;
}

QTextEdit:focus {
    border-color: #0097e6;
    background-color: #f8f9fa;
}

/* Menu styling */
QMenu {
    background-color: white;
    border: 1px solid #dcdde1;
    border-radius: 8px;
    padding: 5px;
}

QMenu::item {
    padding: 8px 15px;
    border-radius: 4px;
    color: #2f3640;
}

QMenu::item:selected {
    background-color: #0097e6;
    color: white;
}

QMenu::separator {
    height: 1px;
    background-color: #dcdde1;
    margin: 5px 0;
}

/* ToolTip styling */
QToolTip {
    background-color: #2f3640;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 5px 8px;
    font-size: 12px;
}

/* StatusBar styling */
QStatusBar {
    background-color: #34495e;
    color: white;
    border: none;
}

QStatusBar::item {
    border: none;
}

/* ProgressBar styling */
QProgressBar {
    border: 2px solid #dcdde1;
    border-radius: 8px;
    background-color: #ecf0f1;
    text-align: center;
    color: #2f3640;
    font-weight: bold;
}

QProgressBar::chunk {
    background-color: #0097e6;
    border-radius: 6px;
}

/* Slider styling */
QSlider::groove:horizontal {
    border: 1px solid #dcdde1;
    height: 8px;
    background-color: #ecf0f1;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background-color: #0097e6;
    border: 2px solid #0097e6;
    width: 18px;
    margin: -5px 0;
    border-radius: 9px;
}

QSlider::handle:horizontal:hover {
    background-color: #00a8ff;
    border-color: #00a8ff;
}

/* Custom classes for specific components */
.cart-item {
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 10px;
    margin: 5px 0;
}

.cart-item:hover {
    border-color: #0097e6;
    background-color: #f8f9fa;
}

.product-card {
    background-color: white;
    border: 2px solid #e0e0e0;
    border-radius: 12px;
    padding: 12px;
    margin: 5px;
}

.product-card:hover {
    border-color: #0097e6;
    background-color: #f8f9fa;
}

.category-button {
    background-color: #0097e6;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    font-weight: bold;
    font-size: 11px;
    min-height: 35px;
}

.category-button:checked {
    background-color: #00a8ff;
    border: 2px solid white;
}

.category-button:hover {
    background-color: #00a8ff;
}
